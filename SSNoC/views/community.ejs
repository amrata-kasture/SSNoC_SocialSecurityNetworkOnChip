        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                        Directory   
                </li>
                <% userDirectory.forEach(function(userItem){ %>
                    <li>
                    <% if (userItem.online) { %>
                        	<a href="#" style="color: green;"> <%= userItem.username %>
		                   <% if(userItem.status===1){ %>
		                        	<span class="glyphicon glyphicon-plus-sign" style="color: red;" aria-hidden="true"></span>
		                     <% }
		                        else if(userItem.status===2){ %>
		                           <span class="glyphicon glyphicon-exclamation-sign" style="color: yellow;" aria-hidden="true"></span>
		                     <% }
		                        else if(userItem.status===3){ %>
									<span class="glyphicon glyphicon-ok-sign" style="color: green;" aria-hidden="true"></span>
							 <%	}
								else { %>
								<span></span>
							 <%	} %>
                       		</a>
                   
                    <% } else { %>
	                        <a href="#" style="color: grey;"> <%= userItem.username %> 
							<%	if(userItem.status===1){ %>
		                        	<span class="glyphicon glyphicon-plus-sign" style="color: red;" aria-hidden="true"></span>
		                     <%   }
		                        else if(userItem.status===2){ %>
		                           <span class="glyphicon glyphicon-exclamation-sign" style="color: yellow;" aria-hidden="true"></span>
		                     <%   }
		                        else if(userItem.status===3){ %>
									<span class="glyphicon glyphicon-ok-sign" style="color: green;" aria-hidden="true"></span>
							 <%	}
								else{  %>
								<span></span>
							 <%	} %>
							

	                        </a>
                     <% }  %>
                     </li>

             <%  });  %>

       
